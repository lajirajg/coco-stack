---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { SITE } from "~/site";
---

<BaseLayout title={`About - ${SITE.name}`} description="Professional profile and focus areas.">
  <section class="hero">
    <div class="kicker">About</div>
    <h1 class="headline">Technology, made relevant.</h1>
    <p class="subhead">
      I work across AI engineering, product strategy, and applied research. My focus is
      building usable systems, communicating tradeoffs clearly, and keeping delivery grounded
      in business impact and public benefit.
    </p>
    <div class="ctaRow">
      <a class="btn primary" href="/contact">Contact</a>
      <a class="btn" href="/research">Research &amp; PoVs</a>
    </div>
  </section>

  <section class="grid" aria-label="About details">
    <div class="card span6">
      <h3>Focus</h3>
      <p>
        Applied AI, evaluation and safety-by-design, decision support, and automation that
        reduces friction without creating new risk.
      </p>
      <div class="meta">
        <span class="pill">AI systems</span>
        <span class="pill">Product thinking</span>
        <span class="pill">Delivery</span>
      </div>
    </div>

    <div class="card span6">
      <h3>Domains</h3>
      <p>
        I'm interested in high-leverage applications in healthcare and life sciences
        (including genetics and cancer research) and in pragmatic enterprise frameworks.
      </p>
      <div class="meta">
        <span class="pill">Healthcare</span>
        <span class="pill">Life sciences</span>
        <span class="pill">Industry</span>
      </div>
    </div>
  </section>
</BaseLayout>
