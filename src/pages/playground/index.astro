---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { SITE } from "~/site";
import { getCollection } from "astro:content";

const posts = (await getCollection("playground"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={`Playground - ${SITE.name}`} description="Hands-on experiments with AI and adjacent tech.">
  <section class="hero">
    <div class="kicker">Playground</div>
    <h1 class="headline">Fast experiments, crisp notes.</h1>
    <p class="subhead">
      Short writeups of what I tried, what happened, and why it might matter.
    </p>
  </section>

  <section class="grid" aria-label="Playground posts">
    {posts.map((post) => (
      <a class="card span6" href={`/playground/${post.slug}`}>
        <h3>{post.data.title}</h3>
        <p>{post.data.description}</p>
        <div class="meta">
          <span class="pill">
            {post.data.pubDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "short",
              day: "2-digit"
            })}
          </span>
          {post.data.tags.slice(0, 3).map((t) => (
            <span class="pill">{t}</span>
          ))}
        </div>
      </a>
    ))}
  </section>
</BaseLayout>
