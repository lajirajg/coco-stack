---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { SITE } from "~/site";
import { getCollection } from "astro:content";

const posts = (await getCollection("research"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={`Research - ${SITE.name}`} description="Deep dives and points of view.">
  <section class="hero">
    <div class="kicker">Research &amp; PoVs</div>
    <h1 class="headline">Go deep, stay practical.</h1>
    <p class="subhead">
      Longer reads: assumptions, evidence, and what I think we should do next.
    </p>
  </section>

  <section class="grid" aria-label="Research posts">
    {posts.map((post) => (
      <a class="card span6" href={`/research/${post.slug}`}>
        <h3>{post.data.title}</h3>
        <p>{post.data.description}</p>
        <div class="meta">
          <span class="pill">
            {post.data.pubDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "short",
              day: "2-digit"
            })}
          </span>
          {post.data.tags.slice(0, 3).map((t) => (
            <span class="pill">{t}</span>
          ))}
        </div>
      </a>
    ))}
  </section>
</BaseLayout>
